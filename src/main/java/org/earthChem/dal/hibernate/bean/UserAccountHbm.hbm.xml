<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.earthChem.domain.UserAccount" table="USERACCOUNT">
        <id name="acountID" type="big_decimal">
            <column name="USERACCOUNT_ID" precision="22" scale="0" />
            <generator class="assigned" />
        </id>
        <property name="userName" type="string">
            <column name="USER_ALIAS" length="255"/>
        </property>
        <property name="password" type="string">
            <column name="USER_PW" length="255"/>
        </property>
        <property name="dateCreated" type="timestamp">
            <column name="USER_DATECREATED" length="7" />
        </property>
        <property name="note" type="string">
            <column name="USER_NOTE" length="2000" />
        </property>
        <property name="role" type="string">
            <column name="ROLE" length="25" />
        </property>
    </class>
</hibernate-mapping>
